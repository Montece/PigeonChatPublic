<Window x:Class="Pigeon_Client.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pigeon_Client"
        mc:Ignorable="d"
        Title="Pigeon - Error" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#333333"
        Icon="PigeonLogo.ico" ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Grid>
        <Button Name="OK" Content="Ок!" HorizontalAlignment="Left" Margin="161,248,0,0" VerticalAlignment="Top" Width="181" Height="42" Click="OK_Click" Foreground="White" FontSize="23" Cursor="Hand" Background="#ef665b"/>
        <Label Name="ErrorTitle" Foreground="White" HorizontalContentAlignment = "Center" VerticalContentAlignment="Center" FontSize="25" Content="Название" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="480" Margin="10,10,0,0"/>
        <Label Name="ErrorDescription" Foreground="white" HorizontalContentAlignment = "Center" VerticalContentAlignment="Center" FontSize="15" Content="Описание" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Height="143" Width="480"/>
    </Grid>
</Window>
